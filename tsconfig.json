{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "isolatedModules": false,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "strict": false,
        "skipLibCheck": true,
        "declaration": true
    },
    "include": ["src/**/*", "dist/**/*"],
    "exclude": ["node_modules", "dist"]
}
